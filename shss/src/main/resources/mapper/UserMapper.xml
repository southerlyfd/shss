<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jianghongbo.dao.UserDao">

    <resultMap id="userInfo" type="com.jianghongbo.entity.UserInfo">
        <result column="id" jdbcType="VARCHAR" property="id" />
        <result column="username" jdbcType="VARCHAR" property="username" />
        <result column="password" jdbcType="VARCHAR" property="password" />
        <result column="portrait" jdbcType="VARCHAR" property="portrait" />
        <result column="shss_token" jdbcType="VARCHAR" property="shssToken" />
        <result column="login_time" jdbcType="VARCHAR" property="loginTime" />
    </resultMap>

    <!-- 用户列表查询 -->
    <select id="getUserList" resultMap="userInfo" parameterType="userInfo" >
        select * from user_info where 1=1
        <if test="id != null and id !=''">
            and id = #{id}
        </if>
        <if test="username != null and username !=''">
            and username = #{username}
        </if>
    </select>
    <!-- 用户信息查询 -->
    <select id="getUser" resultMap="userInfo" parameterType="userInfo" >
        select * from user_info where 1=1
        <if test="id != null and id !=''">
            and id = #{id}
        </if>
        <if test="username != null and username !=''">
            and username = #{username}
        </if>
    </select>
    <!-- 用户注册 -->
    <insert id="registerUserInfo" parameterType="userInfo" >
        insert into user_info (username, password, portrait, login_time)
        values (#{username}, #{password}, #{portrait}, now())
    </insert>
    <!-- 用户信息修改 -->
    <update id="updateUserInfo" parameterType="userInfo" >
        update user_info
        <trim prefix="set" suffixOverrides=",">
            <if test="username != null and username !=''"> username = #{username}, </if>
            <if test="password != null and password !=''"> password = #{password}, </if>
            <if test="portrait != null and portrait !=''"> portrait = #{portrait}, </if>
            <if test="shssToken != null and shssToken !=''"> shss_token = #{shssToken}, </if>
            <if test="loginTime != null and loginTime !=''"> login_time = now(), </if>
        </trim>
        where id = #{id}
    </update>
    <!-- 注销用户 -->
    <delete id="deleteUserInfo" parameterType="userInfo" >
        delete from user_info where id = #{id}
    </delete>
    
    <sql id="Base_Column_List">
    	ui.username, ui.portrait, ui.login_time
    </sql>
    
    <select id="getUserInfoByToken" parameterType="java.lang.String" resultMap="userInfo">
    	select 
			<include refid="Base_Column_List" />
    	from user_info ui 
    	where 
    	ui.shss_token = #{shssToken,jdbcType=VARCHAR}
    </select>
    
</mapper>